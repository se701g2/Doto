{
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "extends": ["standard", "plugin:mocha/recommended", "plugin:prettier/recommended"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["mocha"],
    "rules": {
        "indent": 0,
        "quotes": "off",
        "space-before-function-paren": "off",
        "semi": "off",
        "comma-dangle": "off"
    },
    "overrides": [
        {
            "files": ["**/*.test.js"],
            "rules": {
                "no-undef": "off"
            }
        }
    ]
}
