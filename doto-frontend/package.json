{
    "name": "doto-frontend",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@devexpress/dx-react-core": "^2.5.1",
        "@devexpress/dx-react-scheduler": "^2.5.1",
        "@devexpress/dx-react-scheduler-material-ui": "^2.5.1",
        "@material-ui/core": "^4.9.5",
        "@material-ui/icons": "^4.9.1",
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.5.0",
        "@testing-library/user-event": "^7.2.1",
        "configcat-js": "^3.1.0",
        "react": "^16.13.0",
        "react-dom": "^16.13.0",
        "react-router-dom": "^5.1.2",
        "react-scripts": "3.4.0",
        "typeface-roboto": "0.0.75"
    },
    "scripts": {
        "start": "npm run watch:css && react-scripts start",
        "build": "npm run build:css && react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "build:css": "postcss src/tailwind.css -o src/tailwind-generated.css",
        "watch:css": "postcss src/tailwind.css -o src/tailwind-generated.css"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "autoprefixer": "^9.7.4",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.2",
        "eslint": "^6.8.0",
        "eslint-config-standard": "^14.1.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-node": "^11.0.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-react": "^7.19.0",
        "eslint-plugin-standard": "^4.0.1",
        "husky": "^4.2.3",
        "lint-staged": "^10.0.8",
        "postcss-cli": "^7.1.0",
        "prettier": "1.19.1",
        "pretty-quick": "^2.0.1",
        "tailwindcss": "^1.2.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": "eslint --cache --fix",
        "*.{js,css,md}": "prettier --write"
    }
}
