{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": ["plugin:react/recommended", "standard"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "indent": 0,
        "quotes": "off",
        "space-before-function-paren": "off",
        "semi": "off"
    }
}
